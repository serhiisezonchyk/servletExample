<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="java3">
        <class>model.CarEntity</class>
        <class>model.CustomerEntity</class>
        <class>model.DeliveryEntity</class>
        <class>model.OrderEntity</class>
        <class>model.SellerEntity</class>
        <class>model.ShowroomEntity</class>
        <class>model.ReqOrderEntity</class>
        <class>model.ReqToCallManagerEntity</class>
        <class>model.RolesEntity</class>
        <class>model.UsersEntity</class>
        <class>model.ArchiveOrderEntity</class>
        <class>model.ArchiveSellerEntity</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/ShowroomTest"/>
            <property name="hibernate.connection.username" value="postgresTest"/>
            <property name="hibernate.connection.password" value="123123123"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL94Dialect"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>